{
  "manifest_version": 3,
  "name": "OpenTopsHelper",
  "version": "2.1.12345",
  "description": "By Zhima",
  "icons": {
    "16": "icons/favicon_16.png",
    "32": "icons/favicon_32.png",
    "48": "icons/favicon_48.png",
    "128": "icons/favicon_128.png"
  },
  "permissions": [
  "cookies",
  "activeTab", 
  "scripting",
  "tabs",
  "notifications", 
  "webRequest"
],
  "host_permissions": [
    "https://*.topscoding.com/",
    "https://iai.sh.cn/",
    "https://www.luogu.com.cn/",
    "https://atcoder.jp/",
    "https://codeforces.com/"
  ],
  "action": {
    "default_icon": "icons/favicon_128.png",
    "default_title": "What a great day to code!",
    "default_popup": "popup/popup.html"
  },
  "background": {
    "service_worker": "background/service_worker.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://*.topscoding.com/home/account",
        "https://*.topscoding.com/*/home/account"
      ],
      "js": ["content-scripts/auto_fill_cookies.js"],
      "run_at": "document_end"
    },
    {
      "matches": [
        "https://*.topscoding.com/homework/*/*",
        "https://*.topscoding.com/d/*/homework/*/*",
        "https://*.topscoding.com/contest/*/*",
        "https://*.topscoding.com/d/*/contest/*/*",
        "https://*.topscoding.com/training/*/*",
        "https://*.topscoding.com/d/*/training/*/*",
        "https://*.topscoding.com/d/codeforces/p/*"
      ],
      "js": ["content-scripts/help_get_record.js"],
      "run_at": "document_end"
    },
    {
      "matches": ["https://codeforces.com/*"],
      "js": ["content-scripts/parse-codeforces.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "content-scripts/inject-context.js",
        "content-scripts/sync_record_inpage.js"
      ],
      "matches": ["https://*.topscoding.com/*"]
    }
  ]
}